extends ../_template

block variables
  - var title       = 'Apelsin.net'
  - var description = 'Apelsin.net'
  - var ogtitle     = 'Apelsin.net'

  - var pageHeaderTitle = 'Apelsin.net'
  - var breadcrumbs     = 'breadcrumbs'

block content
  .main-wrap
    include ../sections/header

    //begin content
    main.main.index
      include ../sections/top-slider

      //begin calculator-section
      .calculator-section
        //begin section-header
        .section-header
          .container
            h2.title.title--center.animate__animated.zoom-in Калькулятор услуг
        //end section-header
        include ../sections/calculator
      //end calculator-section

      //begin presents-section
      .presents-section
        //begin section-header
        .section-header
          .container
            h2.title.title--center.animate__animated.zoom-in Подарки для клиентов
        //end section-header
        include ../sections/presents
      //end presents-section

      include ../sections/options

      //begin news-sec
      .news-sec
        //begin section-header
        .section-header
          .container
            h2.title.title--center.animate__animated.zoom-in Центр новостей
        //end section-header
        include ../sections/news-sec
      //end section-header

      div(style='height:100vh;background:#000;')

    //end content

    include ../sections/footer
    include ../sections/scripts
